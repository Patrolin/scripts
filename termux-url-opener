#!/usr/bin/fish

while true
        read -P 'Download video? [Yn]: ' video
        switch $video
                case '' Y y
                        youtube-dl -i -f 'best[height<=360]/worst' --write-sub --write-auto-sub --sub-lang 'en,cs,rechat' -o '~/storage/downloads/video/%(title)s.%(ext)s' $argv
                        and exit
                case N n
                        youtube-dl -i -f 'bestaudio/best[height<=360]/worst' -x -o '~/storage/downloads/audio/%(title)s.%(ext)s' $argv
                        and exit
        end
        printf '\nFailed...\n'
end
